<!-- empleado-form.fxml -->
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.payrollsystem.ui.controllers.EmpleadoController">
   <children>
      <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" 
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" 
                  AnchorPane.topAnchor="0.0">
         <content>
            <VBox spacing="20.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Gestión de Empleados" 
                              style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnNuevo" mnemonicParsing="false" text="Nuevo" 
                               style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                        <Button fx:id="btnGuardar" mnemonicParsing="false" text="Guardar" 
                               style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                        <Button fx:id="btnEliminar" mnemonicParsing="false" text="Eliminar" 
                               style="-fx-background-color: #F44336; -fx-text-fill: white;" />
                     </children>
                  </HBox>
                  
                  <TitledPane animated="false" expanded="true" text="Datos Personales">
                     <content>
                        <GridPane hgap="15.0" vgap="15.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Label text="Código:" />
                              <TextField fx:id="txtCodigo" GridPane.columnIndex="1" />
                              <Label text="Nombre:" GridPane.rowIndex="1" />
                              <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label text="Apellido:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                              <TextField fx:id="txtApellido" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                              <Label text="Email:" GridPane.rowIndex="2" />
                              <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <Label text="Teléfono:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                              <TextField fx:id="txtTelefono" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                              <Label text="Dirección:" GridPane.rowIndex="3" />
                              <TextField fx:id="txtDireccion" GridPane.columnIndex="1" 
                                       GridPane.columnSpan="2" GridPane.rowIndex="3" />
                           </children>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </GridPane>
                     </content>
                  </TitledPane>
                  
                  <TitledPane animated="false" expanded="true" text="Datos Laborales">
                     <content>
                        <GridPane hgap="15.0" vgap="15.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Label text="Departamento:" />
                              <ComboBox fx:id="cbDepartamento" prefWidth="200.0" GridPane.columnIndex="1" />
                              <Label text="Fecha Ingreso:" GridPane.columnIndex="2" />
                              <DatePicker fx:id="dpFechaIngreso" GridPane.columnIndex="2" />
                              <Label text="Fecha Nacimiento:" GridPane.rowIndex="1" />
                              <DatePicker fx:id="dpFechaNacimiento" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label text="Tipo Contrato:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                              <ComboBox fx:id="cbTipoContrato" prefWidth="200.0" 
                                      GridPane.columnIndex="2" GridPane.rowIndex="1" />
                              <Label text="Salario Base:" GridPane.rowIndex="2" />
                              <TextField fx:id="txtSalarioBase" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <Label text="Estado:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                              <ComboBox fx:id="cbEstado" prefWidth="200.0" 
                                      GridPane.columnIndex="2" GridPane.rowIndex="2" />
                              <Label text="Banco:" GridPane.rowIndex="3" />
                              <TextField fx:id="txtBanco" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              <Label text="No. Cuenta:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                              <TextField fx:id="txtNumeroCuenta" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                           </children>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </GridPane>
                     </content>
                  </TitledPane>
                  
                  <TitledPane animated="false" expanded="true" text="Lista de Empleados">
                     <content>
                        <VBox spacing="10.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <TextField fx:id="txtBuscar" prefWidth="300.0" promptText="Buscar por nombre, código o departamento..." />
                                    <Button fx:id="btnBuscar" mnemonicParsing="false" text="Buscar" />
                                    <Button fx:id="btnLimpiar" mnemonicParsing="false" text="Limpiar" />
                                 </children>
                              </HBox>
                              <TableView fx:id="tableEmpleados" prefHeight="300.0">
                                <columns>
                                  <TableColumn fx:id="colEmpleadoCodigo" prefWidth="75.0" text="Código" />
                                  <TableColumn fx:id="colEmpleadoNombre" prefWidth="150.0" text="Nombre Completo" />
                                    <TableColumn fx:id="colEmpleadoDepartamento" prefWidth="120.0" text="Departamento" />
                                    <TableColumn fx:id="colEmpleadoSalario" prefWidth="100.0" text="Salario" />
                                    <TableColumn fx:id="colEmpleadoEstado" prefWidth="80.0" text="Estado" />
                                    <TableColumn fx:id="colEmpleadoFechaIngreso" prefWidth="100.0" text="Fecha Ingreso" />
                                </columns>
                              </TableView>
                           </children>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </VBox>
                     </content>
                  </TitledPane>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>